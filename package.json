{
  "name": "caronaboard",
  "version": "1.0.0",
  "description": "Social ride network",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node ./src/main-server",
    "postinstall": "npm run build",
    "dev-server": "NODE_ENV=development node ./src/main-server",
    "build": "npm run clean && webpack --config ./webpack/webpack.config.js",
    "clean": "rm -rf ./build",
    "lint": "eslint ./src --ext .js --ext .jsx --cache",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register,.:mocha-image-compiler --recursive --check-leaks --full-trace ./src/**/*-spec.js",
    "ci": "npm run lint && npm run test"
  },
